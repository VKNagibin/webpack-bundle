{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
    "include": ["src", "index.d.ts"]
}